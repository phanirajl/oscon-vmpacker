{
    "builders": [{
        "type": "virtualbox-ovf",
        "source_path": "base14.ova",
        "guest_additions_mode": "disable",
        "ssh_username": "root",
        "ssh_password": "demo",
        "headless": true,
        "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
        "output_directory": "oscon2016",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "3072"],
            ["modifyvm", "{{.Name}}", "--cpus", "2"]
        ]


      }
  ],
  "provisioners": [
      {
          "type": "file",
          "source": "spark-cassandra-connector-assembly-1.6.0-M2.jar",
          "destination": "/tmp/spark-cassandra-connector-assembly-1.6.0-M2.jar"
      },
      {
          "type": "file",
          "source": "cassandra.yaml",
          "destination": "/tmp/cassandra.yaml"
      },
      {
          "type": "file",
          "source": "jvm.options",
          "destination": "/tmp/jvm.options"
      },
      {
          "type": "shell",
          "scripts": ["env.sh",
                      "java8.sh",
                      "cassandra-3.0.x.sh",
                      "spark-1.6.sh"]

      }
  ]
}
